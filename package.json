{
  "name": "vidalita-pos",
  "version": "1.0.0",
  "description": "Vidalita POS Desktop Application",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "electron:dev": "electron .",
    "electron:dev:full": "Start-Process powershell -ArgumentList '-NoExit', '-Command', 'cd frontend; npm run dev' -WindowStyle Minimized; Start-Sleep -Seconds 3; electron .",
    "electron:build": "electron-builder",
    "electron:build:win": "electron-builder --win",
    "build:frontend": "cd frontend && npm run build",
    "build:frontend:electron": "cd frontend && $env:ELECTRON='true'; npm run build",
    "build:backend": "cd backend && npm run build",
    "build:all": "npm run build:frontend:electron && npm run build:backend && npm run electron:build:win",
    "postinstall": "cd backend && npm install && cd ../frontend && npm install"
  },
  "build": {
    "appId": "com.vidalita.pos",
    "productName": "Vidalita POS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "backend/**/*",
      "frontend/dist/**/*",
      "!backend/node_modules/**/*",
      "!frontend/node_modules/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!backend/logs/**/*",
      "!backend/uploads/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "electron/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    },
    "extraResources": [
      {
        "from": "backend/prisma",
        "to": "prisma"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}

